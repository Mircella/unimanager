<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.yevgeniya.unimanager.MainActivity">
    <TextView
        android:layout_marginTop="100dp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/greetingTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="To access offices of WSFiZ\nyou need to sign in with phone number"
            />
        <Button
            android:id="@+id/createBTN"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Sign in"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal|center_vertical"
            >
        </Button>
        <Button
            android:id="@+id/logOutBTN"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Log out"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal|center_vertical"
            >
        </Button>
     <Button
            android:id="@+id/gotoBTN"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Go to WSFiZ"
            android:layout_gravity="center_horizontal|center_vertical"
            android:visibility="gone"
            >
        </Button>

</LinearLayout>
